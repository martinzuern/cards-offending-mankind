{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeVersion": "12.16.0",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/backend/node_modules/.bin/jest",
        "--runInBand"
